<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/uiDisplayImageDataLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="@color/buttonColor"
        android:layout_marginTop="10sp">
        <TextView
            android:id="@+id/uiDateDisplayTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:height="40sp"
            android:background="@color/buttonColor"
            android:textColor="@color/textColor"
            android:padding="5sp" />

        <ImageButton
            android:id="@+id/uiDeleteButton"
            android:layout_width="40sp"
            android:layout_height="50sp"
            android:background="@drawable/trashicon"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/uiOriginTextDisplayTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/viewBackgroundColor"
        android:textColor="@color/textColor"
        android:padding="10dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"/>

    <TextView
        android:id="@+id/uiTranslatedDisplayTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/viewBackgroundColor"
        android:textColor="@color/textColor"
        android:padding="10dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"/>

</LinearLayout>