<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/uiDisplayImageDataLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@color/DarkButtonColor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/uiDateDisplayTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="25sp"
            android:height="40dp"
            android:gravity="center"
            android:padding="5dp"
            tools:ignore="RelativeOverlap" />

        <ImageButton
            android:id="@+id/uiDeleteButton"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/trashicon"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/delete_content_desc" />
    </RelativeLayout>

    <TextView
        android:id="@+id/uiOriginLanguageDisplayTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="22sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/DarkButtonColorPressed"/>

    <TextView
        android:id="@+id/uiOriginTextDisplayTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/DarkViewBackgroundColor"/>

    <TextView
        android:id="@+id/uiTranslatedLanguageDisplayTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="22sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/DarkButtonColorPressed"/>

    <TextView
        android:id="@+id/uiTranslatedTextDisplayTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/DarkViewBackgroundColor"/>

</LinearLayout>